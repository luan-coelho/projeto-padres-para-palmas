---
import { PilaresList } from './PilaresList'

interface Props {
  sectionLabel?: string
  title?: string
  titleHighlight?: string
}

const {
  sectionLabel = 'Fundamentos',
  title = 'Pilares do',
  titleHighlight = 'Projeto'
} = Astro.props
---

<section id="pilares" class="bg-bg-azul py-20 lg:py-28">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <span class="mb-4 inline-block text-sm font-semibold tracking-wider text-azul uppercase">
        {sectionLabel}
      </span>
      <h2 class="text-3xl font-light text-grafite sm:text-4xl lg:text-5xl">
        {title}
        <span class="font-semibold">{titleHighlight}</span>
      </h2>
    </div>

    <PilaresList client:visible />
  </div>
</section>
