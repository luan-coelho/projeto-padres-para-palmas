---
interface Pilar {
  icon: string
  color: 'azul' | 'amarelo' | 'verde'
  title: string
  description: string
}

interface Props {
  sectionLabel?: string
  title?: string
  titleHighlight?: string
  pilares?: Pilar[]
}

const defaultPilares: Pilar[] = [
  {
    icon: 'bible',
    color: 'azul',
    title: 'Fundamentação Bíblica',
    description: 'Alicerçados na Palavra de Deus e na tradição da Igreja'
  },
  {
    icon: 'youth',
    color: 'amarelo',
    title: 'Juventudes',
    description: 'Protagonismo juvenil na vivência da fé e do chamado'
  },
  {
    icon: 'person',
    color: 'verde',
    title: 'Sujeitos do Chamado',
    description: 'Acompanhamento personalizado aos vocacionados'
  },
  {
    icon: 'prayer',
    color: 'azul',
    title: 'Oração',
    description: 'Fundamento espiritual e sustento das vocações'
  },
  {
    icon: 'building',
    color: 'amarelo',
    title: 'PV/SAV',
    description: 'Pastoral Vocacional e Serviço de Animação Vocacional'
  },
  {
    icon: 'home',
    color: 'verde',
    title: 'Comunidade Paroquial',
    description: 'Base de acolhimento e formação dos chamados'
  },
  {
    icon: 'social',
    color: 'azul',
    title: 'Redes Sociais',
    description: 'Evangelização digital e alcance missionário'
  }
]

const {
  sectionLabel = 'Fundamentos',
  title = 'Pilares do',
  titleHighlight = 'Projeto',
  pilares = defaultPilares
} = Astro.props

const colorClasses = {
  azul: { bg: 'bg-azul/10', bgHover: 'group-hover:bg-azul', text: 'text-azul' },
  amarelo: { bg: 'bg-amarelo/10', bgHover: 'group-hover:bg-amarelo', text: 'text-amarelo' },
  verde: { bg: 'bg-verde/10', bgHover: 'group-hover:bg-verde', text: 'text-verde' }
}
---

<section id="pilares" class="bg-bg-azul py-20 lg:py-28">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mb-16 text-center">
      <span class="text-azul mb-4 inline-block text-sm font-semibold tracking-wider uppercase">
        {sectionLabel}
      </span>
      <h2 class="text-grafite text-3xl font-light sm:text-4xl lg:text-5xl">
        {title}
        <span class="font-semibold">{titleHighlight}</span>
      </h2>
    </div>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
      {
        pilares.map(pilar => (
          <div class="group rounded-2xl bg-white p-6 shadow-sm transition-all duration-300 hover:shadow-xl">
            <div
              class={`h-14 w-14 ${colorClasses[pilar.color].bg} mb-4 flex items-center justify-center rounded-xl ${colorClasses[pilar.color].bgHover} transition-all duration-300 group-hover:scale-110`}>
              {pilar.icon === 'bible' && (
                <svg
                  class={`h-7 w-7 ${colorClasses[pilar.color].text} transition-colors group-hover:text-white`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                  />
                </svg>
              )}
              {pilar.icon === 'youth' && (
                <svg
                  class={`h-7 w-7 ${colorClasses[pilar.color].text} transition-colors group-hover:text-white`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"
                  />
                </svg>
              )}
              {pilar.icon === 'person' && (
                <svg
                  class={`h-7 w-7 ${colorClasses[pilar.color].text} transition-colors group-hover:text-white`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              )}
              {pilar.icon === 'prayer' && (
                <svg
                  class={`h-7 w-7 ${colorClasses[pilar.color].text} transition-colors group-hover:text-white`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11"
                  />
                </svg>
              )}
              {pilar.icon === 'building' && (
                <svg
                  class={`h-7 w-7 ${colorClasses[pilar.color].text} transition-colors group-hover:text-white`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"
                  />
                </svg>
              )}
              {pilar.icon === 'home' && (
                <svg
                  class={`h-7 w-7 ${colorClasses[pilar.color].text} transition-colors group-hover:text-white`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                  />
                </svg>
              )}
              {pilar.icon === 'social' && (
                <svg
                  class={`h-7 w-7 ${colorClasses[pilar.color].text} transition-colors group-hover:text-white`}
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="1.5"
                    d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"
                  />
                </svg>
              )}
            </div>
            <h3 class="text-grafite mb-2 text-xl font-semibold">{pilar.title}</h3>
            <p class="text-grafite/70 text-sm">{pilar.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
