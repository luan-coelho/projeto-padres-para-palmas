---
import { Image } from 'astro:assets'
import heroBgDesktop from '../assets/images/barco-com-jesus-desktop.png'
import heroBgMobile from '../assets/images/barco-com-jesus-mobile-v6.png'
import logoBrancaSt from '../assets/images/logo-branca-st.png'

interface Props {
  title?: string
  subtitle?: string
  citation?: string
  buttonText?: string
  buttonLink?: string
  backgroundImage?: ImageMetadata
  logoImage?: ImageMetadata
}

const {
  title = 'Projeto Padres para a',
  subtitle = 'Igreja de Palmas',
  citation = '"Farei de ti pescador de homens" (Mt 4,19)',
  buttonText = 'Conhe√ßa o Projeto',
  buttonLink = '#sobre',
  backgroundImage = heroBgDesktop,
  logoImage = logoBrancaSt
} = Astro.props
---

<section id="hero" class="relative flex min-h-screen items-center justify-center">
  <!-- Background Image -->
  <div class="absolute inset-0">
    <Image
      src={backgroundImage}
      alt="Hero Background"
      class="hidden h-full w-full object-cover sm:block"
    />
    <Image
      src={heroBgMobile}
      alt="Hero Background"
      class="block h-full w-full object-cover sm:hidden"
    />
    <div class="hero-overlay absolute inset-0"></div>
  </div>

  <!-- Hero Content -->
  <div class="relative z-10 mx-auto max-w-4xl px-4 text-center text-white">
    <!-- Logo Grande no Hero -->
    <Image
      src={logoImage}
      alt="Projeto Padres para a Igreja de Palmas"
      class="mx-auto mb-8 h-32 w-auto sm:h-40 lg:h-48"
    />

    <h1 class="mb-6 text-4xl leading-tight font-light sm:text-5xl lg:text-6xl">
      {title}<br /><span class="font-semibold">{subtitle}</span>
    </h1>
    <p class="mb-10 text-xl font-light text-white/90 italic sm:text-2xl">
      {citation}
    </p>
    <a
      href={buttonLink}
      class="inline-block transform rounded-full bg-azul px-8 py-4 font-semibold text-white shadow-lg transition-all duration-300 hover:scale-105 hover:bg-azul/90">
      {buttonText}
    </a>
  </div>
</section>
