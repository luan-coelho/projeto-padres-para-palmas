---
interface HighlightCard {
    icon: string;
    color: 'azul' | 'amarelo' | 'verde';
    value: string;
    unit?: string;
    title?: string;
    subtitle: string;
}

interface Props {
    sectionLabel?: string;
    title?: string;
    titleHighlight?: string;
    cards?: HighlightCard[];
}

const defaultCards: HighlightCard[] = [
    {
        icon: 'cross',
        color: 'azul',
        value: '30',
        unit: 'anos',
        subtitle: 'Arquidiocese de Palmas'
    },
    {
        icon: 'chalice',
        color: 'amarelo',
        title: 'Vocação',
        value: '',
        subtitle: 'Ministério Presbiteral'
    },
    {
        icon: 'community',
        color: 'verde',
        title: 'Juventudes',
        value: '',
        subtitle: 'Esperança da Igreja'
    },
    {
        icon: 'prayer',
        color: 'azul',
        title: 'Oração',
        value: '',
        subtitle: 'Sustento das vocações'
    }
];

const {
    sectionLabel = 'Um marco histórico',
    title = 'Celebrando a',
    titleHighlight = 'nossa história',
    cards = defaultCards
} = Astro.props;

const colorClasses = {
    azul: {
        bg: 'bg-gradient-to-br from-azul to-azul/80',
        bgHover: 'from-azul/5',
        glow: 'bg-azul/20'
    },
    amarelo: {
        bg: 'bg-gradient-to-br from-amarelo to-amber-500',
        bgHover: 'from-amarelo/5',
        glow: 'bg-amarelo/20'
    },
    verde: {
        bg: 'bg-gradient-to-br from-verde to-emerald-600',
        bgHover: 'from-verde/5',
        glow: 'bg-verde/20'
    }
};
---

<section id="destaques" class="py-20 lg:py-28 bg-gradient-to-b from-white to-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Título da Seção -->
        <div class="text-center mb-16">
            <span class="inline-block text-azul font-semibold text-sm uppercase tracking-widest mb-4">{sectionLabel}</span>
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-light text-grafite">
                {title} <span class="font-semibold">{titleHighlight}</span>
            </h2>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
            {cards.map(card => (
                <div class={`group relative bg-white rounded-3xl p-8 text-center shadow-lg hover:shadow-2xl transition-all duration-500 overflow-hidden`}>
                    <!-- Decorative gradient -->
                    <div class={`absolute inset-0 bg-gradient-to-br ${colorClasses[card.color].bgHover} to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>
                    
                    <!-- Icon container -->
                    <div class="relative mb-6">
                        <div class={`w-20 h-20 mx-auto ${colorClasses[card.color].bg} rounded-2xl flex items-center justify-center shadow-lg group-hover:scale-110 transition-transform duration-500`}>
                            {card.icon === 'cross' && (
                                <svg class="w-10 h-10 text-white" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M11 2v7H4v4h7v9h2v-9h7V9h-7V2h-2z"/>
                                </svg>
                            )}
                            {card.icon === 'chalice' && (
                                <svg class="w-10 h-10 text-white" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 4c-4 0-6 2-6 4v1h12V8c0-2-2-4-6-4zm0 16c-1.1 0-2-.9-2-2h4c0 1.1-.9 2-2 2zm-4-4v-4c0-1.1.9-2 2-2h4c1.1 0 2 .9 2 2v4H8zm4-14C8.5 2 5.5 4 5.5 7v1h-2v3c0 2.5 2 4.5 4.5 5v2c0 2 1.5 3.5 3.5 4v.5h1V22c2-.5 3.5-2 3.5-4v-2c2.5-.5 4.5-2.5 4.5-5V8h-2V7c0-3-3-5-6.5-5z"/>
                                </svg>
                            )}
                            {card.icon === 'community' && (
                                <svg class="w-10 h-10 text-white" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                    <circle cx="18" cy="8" r="3"/>
                                    <path d="M18 13c1.1 0 2.1.3 3 .8V18h-4v-2.2c0-1-.4-1.9-1-2.6.6-.1 1.3-.2 2-.2z"/>
                                    <circle cx="6" cy="8" r="3"/>
                                    <path d="M6 13c-1.1 0-2.1.3-3 .8V18h4v-2.2c0-1 .4-1.9 1-2.6-.6-.1-1.3-.2-2-.2z"/>
                                </svg>
                            )}
                            {card.icon === 'prayer' && (
                                <svg class="w-10 h-10 text-white" viewBox="0 0 24 24" fill="currentColor">
                                    <path d="M12 2C9.8 2 8 3.8 8 6v4.5c0 .3.2.5.5.5s.5-.2.5-.5V6c0-1.7 1.3-3 3-3s3 1.3 3 3v4.5c0 .3.2.5.5.5s.5-.2.5-.5V6c0-2.2-1.8-4-4-4zm-4.5 8c-.8 0-1.5.7-1.5 1.5v5c0 3.3 2.7 6 6 6s6-2.7 6-6v-5c0-.8-.7-1.5-1.5-1.5s-1.5.7-1.5 1.5v3c0 .3-.2.5-.5.5s-.5-.2-.5-.5v-5c0-.8-.7-1.5-1.5-1.5s-1.5.7-1.5 1.5v5c0 .3-.2.5-.5.5s-.5-.2-.5-.5v-5c0-.8-.7-1.5-1.5-1.5z"/>
                                </svg>
                            )}
                        </div>
                        <!-- Glow effect -->
                        <div class={`absolute inset-0 w-20 h-20 mx-auto ${colorClasses[card.color].glow} rounded-2xl blur-xl opacity-0 group-hover:opacity-100 transition-opacity duration-500`}></div>
                    </div>
                    
                    <div class="relative">
                        {card.value && (
                            <>
                                <span class="text-5xl lg:text-6xl font-bold bg-gradient-to-r from-azul to-azul/70 bg-clip-text text-transparent">{card.value}</span>
                                {card.unit && <span class="block text-lg font-medium text-grafite mt-1">{card.unit}</span>}
                            </>
                        )}
                        {card.title && <h3 class="text-2xl font-bold text-grafite">{card.title}</h3>}
                        <p class="text-grafite/60 mt-3 text-sm">{card.subtitle}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
