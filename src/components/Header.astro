                    </svg>
                </a>
            )} -->
        </div>
    </div>
</header>

<script>
    const mobileMenuBtn = document.getElementById('mobile-menu-btn')
    const mobileMenu = document.getElementById('mobile-menu')
    const iconMenu = document.getElementById('icon-menu')
    const iconClose = document.getElementById('icon-close')
    const mobileNavItems = document.querySelectorAll('.nav-item-mobile')

    let isMenuOpen = false

    // Function to handle Menu Toggle
    function toggleMenu() {
        isMenuOpen = !isMenuOpen

        if (isMenuOpen) {
            // Open
            mobileMenu?.classList.remove('translate-x-full')

            // Icon animation
            iconMenu?.classList.add('opacity-0', '-rotate-90', 'scale-50')
            iconClose?.classList.remove('opacity-0', 'rotate-90', 'scale-50')

            // Lock Scroll
            document.body.style.overflow = 'hidden'

            // Staggered items animation
            setTimeout(() => {
                mobileNavItems.forEach(item => {
                    item.classList.remove('translate-y-4', 'opacity-0')
                })
            }, 100)
        } else {
            // Close
            mobileMenu?.classList.add('translate-x-full')

            // Icon animation
            iconMenu?.classList.remove('opacity-0', '-rotate-90', 'scale-50')
            iconClose?.classList.add('opacity-0', 'rotate-90', 'scale-50')

            // Unlock Scroll
            document.body.style.overflow = ''

            // Reset items
            mobileNavItems.forEach(item => {
                item.classList.add('translate-y-4', 'opacity-0')
            })
        }
        updateHeader() // Update button color
    }

    mobileMenuBtn?.addEventListener('click', toggleMenu)

    // Close when clicking a link
    mobileNavItems.forEach(link => {
        link.addEventListener('click', () => {
            if (isMenuOpen) toggleMenu()
        })
    })

    // Header Background and Button Color on Scroll
    const header = document.getElementById('header')
    const headerLogo = document.getElementById('header-logo')
    const navLinks = document.querySelectorAll('.nav-link')

    function updateHeader() {
        const isScrolled = window.scrollY > 100

        // Handle Header Background
        if (isScrolled) {
            header?.classList.add('bg-white', 'shadow-md')
            header?.classList.remove('bg-transparent')

            navLinks.forEach(link => {
                link.classList.remove('text-white')
                link.classList.add('text-grafite')
            })

            // Show logo
            headerLogo?.classList.remove('opacity-0')
            headerLogo?.classList.add('opacity-100')
        } else {
            header?.classList.remove('bg-white', 'shadow-md')
            header?.classList.add('bg-transparent')

            navLinks.forEach(link => {
                link.classList.add('text-white')
                link.classList.remove('text-grafite')
            })

            // Hide logo
            headerLogo?.classList.add('opacity-0')
            headerLogo?.classList.remove('opacity-100')
        }

        // Handle Mobile Button Color
        // If menu is open, button must be white (on dark overlay)
        // If menu is closed, button follows header scroll state
        if (isMenuOpen) {
            mobileMenuBtn?.classList.remove('text-grafite')
            mobileMenuBtn?.classList.add('text-white')
        } else {
            if (isScrolled) {
                mobileMenuBtn?.classList.remove('text-white')
                mobileMenuBtn?.classList.add('text-grafite')
            } else {
                mobileMenuBtn?.classList.add('text-white')
                mobileMenuBtn?.classList.remove('text-grafite')
            }
        }
    }

    window.addEventListener('scroll', updateHeader)

    // Initial check
    updateHeader()
</script>
