OO---
interface Props {
    title?: string
    subtitle?: string
    citation?: string
    buttonText?: string
    buttonLink?: string
    backgroundImage?: string
    logoImage?: string
}

const {
    title = 'Projeto Padres para a',
    subtitle = 'Igreja de Palmas',
    citation = '"Farei de ti pescador de homens" (Mt 4,19)',
    buttonText = 'Conhe√ßa o Projeto',
    buttonLink = '#sobre',
    backgroundImage = '/images/barco-com-jesus-desktop.png',
    logoImage = '/images/logo-branca-st.png'
} = Astro.props
---

<section id="hero" class="relative min-h-screen flex items-center justify-center">
    <!-- Background Image -->
    <div class="absolute inset-0">
        <img src={backgroundImage} alt="Hero Background" class="hidden sm:block w-full h-full object-cover" />
        <img
            src="/images/barco-com-jesus-mobile-v6.png"
            alt="Hero Background"
            class="block sm:hidden w-full h-full object-cover"
        />
        <div class="hero-overlay absolute inset-0"></div>
    </div>

    <!-- Hero Content -->
    <div class="relative z-10 text-center text-white px-4 max-w-4xl mx-auto">
        <!-- Logo Grande no Hero -->
        <img
            src={logoImage}
            alt="Projeto Padres para a Igreja de Palmas"
            class="h-32 sm:h-40 lg:h-48 w-auto mx-auto mb-8"
        />

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-light leading-tight mb-6">
            {title}<br /><span class="font-semibold">{subtitle}</span>
        </h1>
        <p class="text-xl sm:text-2xl font-light italic mb-10 text-white/90">
            {citation}
        </p>
        <a
            href={buttonLink}
            class="inline-block bg-azul hover:bg-azul/90 text-white font-semibold px-8 py-4 rounded-full transition-all duration-300 transform hover:scale-105 shadow-lg">
            {buttonText}
        </a>
    </div>
</section>
