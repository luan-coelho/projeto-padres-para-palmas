---
import type { CollectionEntry } from 'astro:content'
import FormattedDate from './FormattedDate.astro'

interface Props {
    sectionLabel?: string
    title?: string
    titleHighlight?: string
    posts?: CollectionEntry<'blog'>[]
    maxPosts?: number
}

const {
    sectionLabel = 'Fique por dentro',
    title = 'Notícias em',
    titleHighlight = 'Destaque',
    posts = [],
    maxPosts = 3
} = Astro.props

const displayPosts = posts.slice(0, maxPosts)
---

<section id="noticias" class="py-20 lg:py-28 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <span class="inline-block text-verde font-semibold text-sm uppercase tracking-wider mb-4">
                {sectionLabel}
            </span>
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-light text-grafite">
                {title}
                <span class="font-semibold">{titleHighlight}</span>
            </h2>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
                displayPosts.length > 0 ? (
                    displayPosts.map(post => (
                        <article class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 group">
                            <div class="aspect-video overflow-hidden">
                                {post.data.heroImage ? (
                                    <img
                                        src={post.data.heroImage.src}
                                        alt={post.data.title}
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                    />
                                ) : (
                                    <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                                        <svg
                                            class="w-12 h-12 text-gray-400"
                                            fill="none"
                                            stroke="currentColor"
                                            viewBox="0 0 24 24">
                                            <path
                                                stroke-linecap="round"
                                                stroke-linejoin="round"
                                                stroke-width="1.5"
                                                d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                            />
                                        </svg>
                                    </div>
                                )}
                            </div>
                            <div class="p-6">
                                <span class="text-verde text-sm font-medium">
                                    <FormattedDate date={post.data.pubDate} />
                                </span>
                                <h3 class="text-xl font-semibold text-grafite mt-2 mb-3 line-clamp-2">
                                    {post.data.title}
                                </h3>
                                <p class="text-grafite/70 text-sm mb-4 line-clamp-3">{post.data.description}</p>
                                <a
                                    href={`/blog/${post.id}/`}
                                    class="inline-flex items-center text-azul font-semibold hover:gap-2 transition-all">
                                    Ler mais
                                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"
                                        />
                                    </svg>
                                </a>
                            </div>
                        </article>
                    ))
                ) : (
                    <Fragment>
                        {[1, 2, 3].map(() => (
                            <article class="bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 group">
                                <div class="aspect-video overflow-hidden">
                                    <img
                                        src="/images/cartaz.jpg"
                                        alt="Notícia"
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                    />
                                </div>
                                <div class="p-6">
                                    <span class="text-verde text-sm font-medium">Em breve</span>
                                    <h3 class="text-xl font-semibold text-grafite mt-2 mb-3 line-clamp-2">
                                        Aguarde novas notícias
                                    </h3>
                                    <p class="text-grafite/70 text-sm mb-4 line-clamp-3">
                                        Estamos preparando conteúdos especiais para você. Fique atento às atualizações.
                                    </p>
                                    <span class="inline-flex items-center text-azul/50 font-semibold">Em breve</span>
                                </div>
                            </article>
                        ))}
                    </Fragment>
                )
            }
        </div>

        {
            displayPosts.length > 0 && (
                <div class="text-center mt-12">
                    <a
                        href="/blog"
                        class="inline-flex items-center gap-2 bg-grafite hover:bg-grafite/90 text-white font-semibold px-8 py-4 rounded-full transition-all duration-300">
                        Ver todas as notícias
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17 8l4 4m0 0l-4 4m4-4H3"
                            />
                        </svg>
                    </a>
                </div>
            )
        }
    </div>
</section>
