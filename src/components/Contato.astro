---
import { CONTACT_INFO } from '../consts'

interface Props {
    sectionLabel?: string
    title?: string
    titleHighlight?: string
}

const { sectionLabel = 'Entre em contato', title = 'Onde', titleHighlight = 'Estamos' } = Astro.props
---

<section id="contato" class="py-20 lg:py-28 bg-gray-50 relative">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <span class="inline-block text-azul font-semibold text-sm uppercase tracking-wider mb-4">{sectionLabel}</span>
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-light text-grafite mb-12">
            {title}
            <span class="font-semibold">{titleHighlight}</span>
        </h2>

        <div class="grid md:grid-cols-2 gap-8">
            <!-- Endereço -->
            <div class="bg-white rounded-2xl p-8 shadow-sm">
                <div class="w-16 h-16 bg-verde/10 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-verde" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z">
                        </path>
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z">
                        </path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-grafite mb-3">Endereço</h3>
                <p class="text-grafite/70">{CONTACT_INFO.address}<br />{CONTACT_INFO.city}</p>
            </div>

            <!-- E-mail -->
            <div class="bg-white rounded-2xl p-8 shadow-sm">
                <div class="w-16 h-16 bg-azul/10 rounded-full flex items-center justify-center mx-auto mb-6">
                    <svg class="w-8 h-8 text-azul" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="1.5"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z">
                        </path>
                    </svg>
                </div>
                <h3 class="text-xl font-semibold text-grafite mb-3">E-mail</h3>
                <a href={`mailto:${CONTACT_INFO.email}`} class="text-azul hover:underline">{CONTACT_INFO.email}</a>
            </div>
        </div>
    </div>
</section>
