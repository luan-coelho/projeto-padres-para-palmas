---
const props = Astro.props
const date = props.date

const formatDate = (date: Date) => {
    const options: Intl.DateTimeFormatOptions = {
        day: 'numeric',
        month: 'long',
        year: 'numeric'
    }
    return date.toLocaleDateString('pt-BR', options)
}
---

<time datetime={date.toISOString()}>
    {formatDate(date)}
</time>
