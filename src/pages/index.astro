---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import Hero from '../components/Hero.astro'
import Apresentacao from '../components/Apresentacao.astro'
import Destaques from '../components/Destaques.astro'
import SobreProjeto from '../components/SobreProjeto.astro'
import Pilares from '../components/Pilares.astro'
import Contato from '../components/Contato.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
---

<!doctype html>
<html lang="pt-BR">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body class="bg-white text-grafite antialiased">
        <Header />

        <main>
            <!-- Hero Section -->
            <Hero />

            <!-- Sobre o Projeto -->
            <SobreProjeto />

            <!-- Apresentação -->
            <Apresentacao />

            <!-- Destaques Institucionais -->
            <Destaques />

            <!-- Pilares do Projeto -->
            <Pilares />

            <!-- Contato -->
            <Contato />
        </main>

        <Footer />
    </body>
</html>
