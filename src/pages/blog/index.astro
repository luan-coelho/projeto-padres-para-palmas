---
import { Image } from 'astro:assets'
import { getCollection } from 'astro:content'
import BaseHead from '../../components/BaseHead.astro'
import Footer from '../../components/Footer.astro'
import FormattedDate from '../../components/FormattedDate.astro'
import Header from '../../components/Header.astro'
import { SITE_TITLE } from '../../consts'

const posts = (await getCollection('blog')).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
---

<!doctype html>
<html lang="pt-BR">
    <head>
        <BaseHead
            title={`Notícias | ${SITE_TITLE}`}
            description="Acompanhe as últimas notícias e atualizações do Projeto Padres para a Igreja de Palmas"
        />
    </head>
    <body class="bg-white text-grafite antialiased">
        <Header />

        <!-- Spacer for fixed header -->
        <div class="h-20"></div>

        <main class="py-16 lg:py-24">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <!-- Page Header -->
                <header class="text-center mb-16">
                    <span class="inline-block text-verde font-semibold text-sm uppercase tracking-wider mb-4">
                        Blog
                    </span>
                    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-light text-grafite mb-4">
                        Notícias e <span class="font-semibold">Atualizações</span>
                    </h1>
                    <p class="text-xl text-grafite/70 max-w-2xl mx-auto">
                        Acompanhe as últimas novidades do Projeto Padres para a Igreja de Palmas
                    </p>
                </header>

                <!-- Posts Grid -->
                <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                    {
                        posts.map((post, index) => (
                            <article
                                class={`bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 group ${index === 0 ? 'md:col-span-2 lg:col-span-3' : ''}`}>
                                <a href={`/blog/${post.id}/`} class="block">
                                    <div class={`${index === 0 ? 'aspect-[21/9]' : 'aspect-video'} overflow-hidden`}>
                                        {post.data.heroImage ? (
                                            <Image
                                                width={index === 0 ? 1200 : 720}
                                                height={index === 0 ? 500 : 360}
                                                src={post.data.heroImage}
                                                alt={post.data.title}
                                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                            />
                                        ) : (
                                            <div class="w-full h-full bg-gray-200 flex items-center justify-center">
                                                <svg
                                                    class="w-16 h-16 text-gray-400"
                                                    fill="none"
                                                    stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                        stroke-width="1.5"
                                                        d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"
                                                    />
                                                </svg>
                                            </div>
                                        )}
                                    </div>
                                    <div class={`p-6 ${index === 0 ? 'lg:p-8' : ''}`}>
                                        <span class="text-verde text-sm font-medium">
                                            <FormattedDate date={post.data.pubDate} />
                                        </span>
                                        <h2
                                            class={`${index === 0 ? 'text-2xl lg:text-3xl' : 'text-xl'} font-semibold text-grafite mt-2 mb-3 group-hover:text-azul transition-colors`}>
                                            {post.data.title}
                                        </h2>
                                        <p
                                            class={`text-grafite/70 ${index === 0 ? 'text-lg' : 'text-sm'} line-clamp-3`}>
                                            {post.data.description}
                                        </p>
                                        <span class="inline-flex items-center text-azul font-semibold mt-4 group-hover:gap-2 transition-all">
                                            Ler mais
                                            <svg
                                                class="w-4 h-4 ml-1"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M9 5l7 7-7 7"
                                                />
                                            </svg>
                                        </span>
                                    </div>
                                </a>
                            </article>
                        ))
                    }
                </div>

                {
                    posts.length === 0 && (
                        <div class="text-center py-16">
                            <div class="w-24 h-24 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                                <svg
                                    class="w-12 h-12 text-gray-400"
                                    fill="none"
                                    stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                                    />
                                </svg>
                            </div>
                            <h3 class="text-2xl font-semibold text-grafite mb-2">Nenhuma notícia ainda</h3>
                            <p class="text-grafite/70">Em breve novidades serão publicadas aqui.</p>
                        </div>
                    )
                }

                <!-- Back to Home -->
                <div class="text-center mt-16">
                    <a
                        href="/"
                        class="inline-flex items-center gap-2 bg-grafite hover:bg-grafite/90 text-white font-semibold px-8 py-4 rounded-full transition-all duration-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M7 16l-4-4m0 0l4-4m-4 4h18">
                            </path>
                        </svg>
                        Voltar ao início
                    </a>
                </div>
            </div>
        </main>

        <Footer />
    </body>
</html>
